#!/bin/bash

yum install httpd -y
systemctl enable httpd
mkdir /var/www/html/kit/
echo "<h1>Welcome to KIT Technologies</h1>" > /var/www/html/cit/index.html
systemctl start httpd 


#!/bin/bash

sudo apt-get update
sudo apt install apache2 -y
sudo systemctl status apache2
mkdir /var/www/html/kit/
echo "<h1>Welcome to KIT Technologies</h1>" > /var/www/html/cit/index.html
systemctl start apache2
